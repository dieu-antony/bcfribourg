// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(cuid())
    username String @unique
    password String
    email    String @unique

    @@index([username])
}

model Team {
    id          String   @id @default(cuid())
    name        String   @unique
    position    Int
    wins        Int
    losses      Int
    draws       Int
    points      Int
    matchRecord String
    setRecord   String
    gamesRecord String
    history     String
    updatedAt   DateTime @updatedAt
    league      League   @relation(fields: [leagueId], references: [id])
    leagueId    String
}

model League {
    id    String @id @default(cuid())
    name  String @unique
    teams Team[]
}

model CalendarEvent {
    id       String   @id @default(cuid())
    summary  String
    url      String
    location String
    start    DateTime
    end      DateTime
}