// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(cuid())
    username String @unique
    password String
    email    String @unique

    @@index([username])
}

model PastTeam {
    id          String  @id @default(cuid())
    name        String
    position    Int     @default(1)
    wins        Int     @default(0)
    losses      Int     @default(0)
    ties        Int     @default(0)
    points      Int     @default(0)
    matchRecord String  @default("0-0")
    setRecord   String  @default("0-0")
    gamesRecord String  @default("0-0")
    seasonStart Int     @default(0)
    league      League  @relation(fields: [leagueId], references: [id])
    leagueId    String
    url         String?
}

model League {
    id    String @id @default(cuid())
    name  String @unique
    pastTeams PastTeam[]
    icTeams   ICTeam[]
}

model CalendarEvent {
    id        String   @id @default(cuid())
    uid       String   @unique
    summary   String
    url       String
    location  String?
    start     DateTime
    end       DateTime
    eventType String   @default("Events")
    longitude Float?
    latitude  Float?
}

model Player {
    id        String   @id @default(cuid())
    firstName String
    lastName  String
    team      ICTeam   @relation(fields: [teamId], references: [id])
    teamId    String
    captain   Boolean?
    gender    String
}

model ICTeam {
    id       String   @id @default(cuid())
    name     String
    league   League   @relation(fields: [leagueId], references: [id])
    leagueId String
    players  Player[]
    url     String
}
